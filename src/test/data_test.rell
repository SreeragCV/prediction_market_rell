    // title_image=http://example.com/image.jpg,
    // data=(creator=0x7b1dda0d03d062460c745b459779e1dee9845a5eec6341a81f91c081c5cc89c5,
    // right_answer=0,
    // is_resolved=false)
    // )
   // ]
}

